<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lf_ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/sc_bin" />

    <LinearLayout
        android:id="@+id/lf_llText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toEndOf="@id/lf_ivIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lf_tvAmenity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/waste_basket"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/lf_tvSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/this_is_a_snippet"
            android:textColor="#666"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lf_llDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/lf_tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5"
            android:textColor="#7F7F7F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lf_tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" km"
            android:textColor="#7F7F7F"
            android:textSize="10sp" />

    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingBottom="5dp"
        android:background="?android:attr/listDivider"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>